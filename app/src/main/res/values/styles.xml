<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#141414</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Sidebar" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextAppearance.SingleSourceName" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:background">#bc000000</item>
    </style>

    <style name="TextAppearance.SingleSourceCount" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:background">#bc000000</item>
    </style>

    <style name="TextAppearance.FavoritesInstructions" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:background">#bc000000</item>

        <!--<item name="android:textColor">#ffffffff</item>-->
        <!--<item name="android:background">#ff000000</item>-->
    </style>

</resources>
